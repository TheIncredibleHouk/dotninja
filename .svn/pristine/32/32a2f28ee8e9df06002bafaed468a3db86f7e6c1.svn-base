        for (var j = 0; j < k; j++) {
            this.__nodeValues.push(this.__all[j].nodeValue);
        }
    }

    var reg = /\{[A-Za-z\.]*}/i, property, a, b, v, w, x, y, l = this.__all.length;
    for (var i = 0; i < l; i++) {
