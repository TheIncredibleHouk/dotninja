            x.$rc(a);
            x.$ib(a, b);
            x.$rc(b);
            x.$ib(b, p);
            x.$rc(p);
            delete p;
            break;

        case ModificationType.Move:
            a = o[0].DOM;
            p = document.createTextNode("meep");
            x.$ib(p, a);
